{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "formatter": false,
  "mode": {
    "build": {
      "temperature": 0.2
    },
    "plan": {
      "temperature": 0.4
    }
  },
  "tui": {
    "scroll_acceleration": {
      "enabled": true
    }
  },
  "permission": {
    "bash": {
        "rm *": "ask",
        "git push*": "ask",
        "git merge*": "ask",
        "git rebase*": "ask",
        "git reset*": "ask",
        "git checkout*": "ask",
        "git status": "allow",
        "git log": "allow",
        "git diff": "allow",
        "git branch": "allow",
        "*": "allow"
      }
  },
  "plugin": ["@franlol/opencode-md-table-formatter@0.0.3"]
}

